<html lang="fr">
  <head>
		<meta charset="utf-8">

    <title>{% block title %}Accueil{% endblock %} - Maîtresse Mathilde</title>
    <meta http-equiv="X-UA-Compatible" content="IE-edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- <link href="/favicon.ico" type="image/ico" rel="shortcut icon"> -->
    <meta name="author" content="Maxence Deschamps">
    <!-- <meta name="description" content="Portfolio de Maxence Deschamps - Intégrateur Web - Nevers - Lyon - HTML, CSS, JavaScript, PHP, SQL, Bootstrap, jQuery." /> -->

    <link href="/assets/style.min.css" type ="text/css" rel="stylesheet" />
  </head>
  <body>
    {% block nav %}
      <nav>
        <ul id="menu-desktop" class="container">
          <li>
            <a class="title" href="/">Maîtresse <br/><span>Mathilde</span></a>
          </li>

          <li>
            <a href="/les-cours">Les cours</a>
            <ul class="sub-menu">
              {% for niveau in niveaux %}
                <li>
                  <a href="/les-cours/{{ niveau | lower }}">{{ niveau | upper }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>

          <li>
            <a href="/les-videos">Les vidéos</a>
            <ul class="sub-menu">
              {% for niveau in niveaux %}
                <li>
                  <a href="/les-videos/{{ niveau | lower }}">{{ niveau | upper }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>

          <li>
            <a href="/les-exercices">Les exercices</a>
            <ul class="sub-menu">
              {% for niveau in niveaux %}
                <li>
                  <a href="/les-exercices/{{ niveau | lower }}">{{ niveau | upper }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>

          <li>
            <a href="/les-questions">Une question ?</a>
          </li>
        </ul>

        <button id="toggle-nav">
          <span class="barre"></span>
          <span class="barre"></span>
          <span class="barre"></span>
        </button>

        <ul id="menu-mobile" class="container">
          <li>
            <a class="open-sub-menu" href="#">Les cours</a>
            <ul class="sub-menu">
              <li>
                <a class="close-sub-menu no-size" href="#">Retour</a>
                <a href="/les-cours">Les cours</a>
              </li>
              {% for niveau in niveaux %}
                <li>
                  <a href="/les-cours/{{ niveau | lower }}">{{ niveau | upper }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>

          <li>
            <a class="open-sub-menu" href="#">Les vidéos</a>
            <ul class="sub-menu">
              <li>
                <a class="close-sub-menu no-size" href="#">Retour</a>
                <a href="/les-videos">Les vidéos</a>
              </li>
              {% for niveau in niveaux %}
                <li>
                  <a href="/les-videos/{{ niveau | lower }}">{{ niveau | upper }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>

          <li>
            <a class="open-sub-menu" href="#">Les exercices</a>
            <ul class="sub-menu">
              <li>
                <a class="close-sub-menu no-size" href="#">Retour</a>
                <a href="/les-exercices">Les exerices</a>
              </li>
              {% for niveau in niveaux %}
                <li>
                  <a href="/les-exercices/{{ niveau | lower }}">{{ niveau | upper }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>

          <li>
            <a href="/les-questions">Une question ?</a>
          </li>
        </ul>
      </nav>
    {% endblock %}

    <div id="app">
      {% block body %}{% endblock %}
    </div>

    {% block footer %}
      <footer>
        <span>&copy; Maxence Deschamps {{ "now"|date("Y") }}</span>
      </footer>
    {% endblock %}

    <script type="text/javascript" src="/assets/script.js"></script>
    {% block javascripts %}{% endblock %}
  </body>
</html>
